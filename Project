        <script>
            function purchase(){
                var q1=document.getElementById("q1");
                var q2=document.getElementById("q2");
                var q3=document.getElementById("q3");
                var q4=document.getElementById("q4");
                var q5=document.getElementById("q5");
                var q6=document.getElementById("q6");
                var output=document.getElementById("output");

                var p1=(699.99)
                var p2=(499.99)
                var p3=(599.99)
                var p4=(549.99)
                var p5=(299.99)
                var p6=(299.99)

                var subtotal=(parseInt(q1.value)*p1)+(parseInt(q2.value)*p2)+(parseInt(q3.value)*p3)+(parseInt(q4.value)*p4)+(parseInt(q5.value)*p5)+(parseInt(q6.value)*p6)
                var taxrate=0.0875
                var tax=subtotal*taxrate
                var shipping;
            
                var build="";        
                build+="Tax: $" + (tax.toFixed(2)) +"<br>";
                build+="Subtotal: $" + (subtotal.toFixed(2)) + "<br>";

                if(subtotal>=299.99 && subtotal<=599.99){
                    shipping=0.18
                    build += "Your shipping fee is 18% of the subtotal" + "<br>";
                }else if(subtotal>=600 && subtotal<=999.99){
                    shipping=0.16
                    build += "Your shipping fee is 16% of the subtotal" + "<br>";
                }else if(subtotal>=1000 && subtotal<=1299.99){
                    shipping=0.15
                    build += "Your shipping fee is 15% of the subtotal" + "<br>";
                }else if(subtotal>=1300 && subtotal<=1599.99){
                    shipping=0.13
                    build += "Your shipping fee is 13% of the subtotal"  + "<br>";             
                }else if(subtotal>=1600 && subtotal<=1999.99){
                    shipping=0.10
                    build += "Your shipping fee is 10% of the subtotal" + "<br>";                                  
                }else if(subtotal>=2000){
                    shipping=0
                    build += "FREE SHIPPING :))))" + "<br>";
                }

                var shippingfee=subtotal*shipping;
                var total=shippingfee + tax + subtotal;

                build+="Shipping Fee: $" + (shippingfee.toFixed(2)) + "<br>";
                build+="----------------------------------------------------<br>";
                build+="Your total is $" + (total.toFixed(2));
                output.innerHTML=build;
                info(purchase)
                CompanyProfit(subtotal);
            }
            function CompanyProfit(subtotal){
                var wholesale=(parseInt(q1.value)*499.99)+(parseInt(q2.value)*249.99)+(parseInt(q3.value)*399.99)+(parseInt(q4.value)*299.99)+(parseInt(q5.value)*149.99)+(parseInt(q6.value)*149.99)
                var profit=subtotal-wholesale;
                var Profit="";
                Profit+="Subtotal is: $" + subtotal.toFixed(2) + "\n";
                Profit+="Wholesale is: $" + wholesale.toFixed(2) + "\n";
                Profit+="----------------------------------------------------\n";
                Profit+="Company Profit Made: $" + profit.toFixed(2)
                console.log(Profit);
            }
        </script>
